{% block content %}
<h2>Comentario</h2>

<table class="record_properties" align="center">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Autor</th>
            <td>{{ entity.autor }}</td>
        </tr>
        <tr>
            <th>Anuncio</th>
            <td>{{ entity.anuncio }}</td>
        </tr>   
        <tr>
            <th>Comentario</th>
            <td>{{ entity.comentario }}</td>
        </tr>
        <tr>
        <tr>
            <th>Fecha</th>
            <td>{{ entity.fecha|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('comentario') }}">
            Regresar a la lista
        </a>
    </li>
        
</ul>
