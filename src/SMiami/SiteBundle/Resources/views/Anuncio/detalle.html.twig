{% extends "::layout.html.twig" %}

{% block content %}
<table id="detalle-anuncio" align="center" class="resaltado">
    <caption>{{ anuncio.seccion }} | {{ anuncio.condado }}-{{ anuncio.ciudad }}</caption>
    <tr>
        <td><img id="portada" src="{{ asset("uploads/fotos/" ~ imagenes[0].path) }}" width="400" height="534"/></td>
        <td>
            <table>
                <tr>
                    <td><img id="thumb1" src="{{ asset("uploads/fotos/" ~ imagenes[0].path) }}" width="135" height="180"/></td>
                    <td><img id="thumb2" src="{{ asset("uploads/fotos/" ~ imagenes[1].path) }}" width="135" height="180"/></td>
                </tr>
                <tr>
                    <td><img id="thumb3" src="{{ asset("uploads/fotos/" ~ imagenes[2].path) }}" width="135" height="180"/></td>
                    <td><img id="thumb4" src="{{ asset("uploads/fotos/" ~ imagenes[3].path) }}" width="135" height="180"/></td>
                </tr>
            </table>
        </td>
        <td>
            <p><span class="detalle_titulo">Nombre:</span> {{ anuncio.nombre }}</p>
            <p><span class="detalle_titulo">Edad:</span> {{ anuncio.edad }}</p>
            <p><span class="detalle_titulo">Teléfono:</span> {{ anuncio.telefono }}</p>
            {% if(anuncio.pemail) %}
            <p><span class="detalle_titulo">Email:</span> {{ anuncio.email }}</p>
            {% endif %}
            <p><span class="detalle_titulo">Descripción:</span> {{ anuncio.descripcion }}</p>
        </td>
    </tr>
</table>
{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="{{ asset('js/jquery-1.8.2.min.js') }}"></script>
<script type="text/javascript">
    $(document).ready(function(){
        $('#thumb1').on({
            'click': function(){
                $('#portada').attr('src',$(this).attr('src'));
            }
        });
        $('#thumb2').on({
            'click': function(){
                $('#portada').attr('src',$(this).attr('src'));
            }
        });
        $('#thumb3').on({
            'click': function(){
                $('#portada').attr('src',$(this).attr('src'));
            }
        });
        $('#thumb4').on({
            'click': function(){
                $('#portada').attr('src',$(this).attr('src'));
            }
        });
    });
</script>
{% endblock %}
