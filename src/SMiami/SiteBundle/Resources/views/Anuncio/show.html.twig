{% extends "::layout.html.twig" %}

{% block content %}
<h1>Anuncio</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
        <tr>
            <th>Edad</th>
            <td>{{ entity.edad }}</td>
        </tr>
        <tr>
            <th>Descripci√≥n</th>
            <td>{{ entity.descripcion }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('anuncio') }}">
            Volver al Perfil
        </a>
    </li>
    <li>
        <a href="{{ path('anuncio_edit', { 'id': entity.id }) }}">
            Editar Anuncio
        </a>
    </li>
    <li>
        <form action="{{ path('anuncio_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
{% endblock %}