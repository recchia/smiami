{% extends "::layout.html.twig" %}

{% block content %}
<div id="fos_bundle">
<h1>Editar Anuncio</h1>

<form action="{{ path('anuncio_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('anuncio') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('anuncio_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
</div>
{% endblock %}