{% extends "::layout.html.twig" %}

{% block content %}
<div id="fos_bundle">
<p align="center"><span class="titulocomentarios">Editando Tu Anuncio</span></p>

<form action="{{ path('anuncio_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_errors(edit_form) }}
    {{ form_row(edit_form.nombre) }}
    {{ form_row(edit_form.edad) }}
    {{ form_row(edit_form.descripcion) }}
    {{ form_row(edit_form.seccion) }}
    {{ form_row(edit_form.email) }}
    {{ form_row(edit_form.publicar_email) }}
    {{ form_row(edit_form.telefono) }}
    {{ form_row(edit_form.condado) }}
    {{ form_row(edit_form.ciudad) }}
    {{ form_row(edit_form.pago) }}
     <h3>Imagenes</h3>
    <ul class="imagenes">
        {% for img in edit_form.imagenes %}
            <li>
            {{ form_label(img.imagen) }}
            {{ form_errors(img.imagen) }}
            {{ form_widget(img.imagen) }}
            {{ form_label(img.portada) }}
            {{ form_errors(img.portada) }}
            {{ form_widget(img.portada) }}
            </li>
        {% endfor %}
    </ul>
    {{ form_rest(edit_form) }}
    <p>
        <button type="submit">Editar</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('miperfil') }}">
            Volver al Perfil
        </a>
    </li>
  
     <li>
        <form action="{{ path('anuncio_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
</div>
{% endblock %}